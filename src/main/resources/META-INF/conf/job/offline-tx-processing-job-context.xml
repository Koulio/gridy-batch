<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-2.1.xsd">

	<job id="job" xmlns="http://www.springframework.org/schema/batch">
		<step id="step-master">
			<partition handler="partitionHandler" step="step" partitioner="partitioner"/>
		</step>
	</job>

	<bean id="partitionHandler"
		  class="org.springframework.batch.core.partition.gridgain.GridGainPartitionHandler" />

	<bean id="partitioner"
		  class="org.opensourcebank.batch.partition.HazelcastMapPartitioner">
        <property name="mapName" value="${batch.hazelcast.map.name}"/>
    </bean>

	<step id="step" xmlns="http://www.springframework.org/schema/batch">
		<tasklet>
			<chunk commit-interval="5">
				<reader>
					<beans:bean class="org.opensourcebank.batch.reader.HazelcastMapItemReader" scope="step">
                        <beans:property name="mapName" value="#{stepExecutionContext[mapName]}"/>                        
                        <beans:property name="fromId" value="#{stepExecutionContext[fromId]}"/>
                        <beans:property name="toId" value="#{stepExecutionContext[toId]}"/>
                    </beans:bean>
				</reader>
				<writer>
					<beans:bean class="org.opensourcebank.batch.writer.OfflineTransactionItemWriter" scope="step">
                        <beans:property name="mapName" value="#{stepExecutionContext[mapName]}"/>
                    </beans:bean>
				</writer>
			</chunk>
            <listeners>
                <listener>
                    <beans:bean class="org.opensourcebank.batch.listener.HazelcastTransactionItemWriteListener" scope="step">
                        <beans:property name="mapName" value="#{stepExecutionContext[mapName]}"/>
                    </beans:bean>
                </listener>
                <listener>
                    <beans:bean class="org.opensourcebank.batch.listener.TransactionProcessingReportStepListener" scope="step">
                        <beans:property name="mapName" value="#{stepExecutionContext[mapName]}"/>
                    </beans:bean>
                </listener>
            </listeners>
		</tasklet>
	</step>

</beans>